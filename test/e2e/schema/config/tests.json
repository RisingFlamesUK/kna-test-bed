{
  "describe": "schema validation for production test configuration files",
  "schema": [
    {
      "it": "validate prompt-map fixture",
      "testGroupName": "interactive prompt schema",
      "tests": {
        "prompt-map fixture": {
          "pattern": "test/e2e/schema/fixtures/prompt-map-valid.json",
          "schema": "test/e2e/schema/config/prompt-map.schema.json"
        }
      }
    },
    {
      "it": "validate scenario test configs",
      "testGroupName": "scenario test configs schema",
      "tests": {
        "scenario test configs": {
          "pattern": "test/e2e/scenarios/*/config/tests.json",
          "schema": "test/e2e/schema/config/scenario-tests.schema.json"
        }
      }
    },
    {
      "it": "validate scenario manifests",
      "testGroupName": "scenario manifest schema",
      "tests": {
        "env manifests": {
          "pattern": "test/e2e/scenarios/*/manifest/env.json",
          "schema": "test/e2e/schema/config/env-manifest.schema.json"
        },
        "files manifests": {
          "pattern": "test/e2e/scenarios/*/manifest/files.json",
          "schema": "test/e2e/schema/config/files-manifest.schema.json"
        },
        "routes manifests": {
          "pattern": "test/e2e/scenarios/*/manifest/routes.json",
          "schema": "test/e2e/schema/config/routes-manifest.schema.json"
        }
      }
    },
    {
      "it": "validate answers files",
      "testGroupName": "answer files schema",
      "tests": {
        "answers files": {
          "pattern": "test/e2e/scenarios/*/config/answers.json",
          "schema": "test/e2e/schema/config/answers.schema.json"
        }
      }
    }
  ]
}
