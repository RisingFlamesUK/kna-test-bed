{
  "describe": "local-only scaffold",
  "mainifestPath": "./manifest/",
  "realEnvPath": "./.real-env/",
  "scenarios": [
    {
      "it": "silent mode: scaffolds app without errors",
      "scenarioName": "local-only-silent",
      "tests": {
        "assertScaffold": {
          "flags": ["--silent", "--passport", "local"]
        },
        "assertEnv": "env.json",
        "mergeEnv": ".real.env"
      }
    },
    {
      "it": "answers-file mode: scaffolds app without error",
      "scenarioName": "local-only-answers",

      "tests": {
        "assertScaffold": {
          "flags": [],
          "answersFile": "test/e2e/scenarios/local-only/answers.json"
        },
        "assertEnv": "env.json",
        "mergeEnv": ".real.env"
      }
    },
    {
      "it": "interactive mode: scaffolds app without errors (prompts)",
      "scenarioName": "local-only-interactive",
      "tests": {
        "assertScaffold": {
          "flags": []
        },
        "assertEnv": "env.json",
        "mergeEnv": ".real.env"
      }
    }
  ]
}
