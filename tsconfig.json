{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,

    "resolveJsonModule": true,

    "types": ["node"],
    "typeRoots": ["./suite/types/ambient", "./node_modules/@types"]
  },
  "include": [
    "suite/**/*.ts",
    "suite/**/*.d.ts",
    "test/**/*.ts",
    "test/**/*.d.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", ".tmp", ".artifacts", "logs"]
}
